<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <title>Blog</title>
    <style>
      body {
        background: linear-gradient(135deg, #f0f4f8, #e8ecf1);
        font-family: 'Poppins', sans-serif;
      }

      /* Blog container card */
      .blog-container {
        max-width: 800px;
        background: #fff;
        padding: 2rem;
        border-radius: 16px;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
        margin: 30px auto;
        transition: all 0.3s ease-in-out;
      }

      .blog-container:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 28px rgba(0, 0, 0, 0.12);
      }

      .blog-title {
        font-weight: 700;
        color: #333;
      }

      .blog-image {
        max-width: 100%;
        border-radius: 12px;
        margin-top: 1rem;
        box-shadow: 0 4px 14px rgba(0, 0, 0, 0.1);
      }

      /* Author section */
      .author-box {
        display: flex;
        align-items: center;
        gap: 12px;
        background: #fafafa;
        border-radius: 12px;
        padding: 10px 15px;
        margin-top: 20px;
        box-shadow: inset 0 1px 3px rgba(0, 0, 0, 0.05);
      }

      .author-box img {
        border-radius: 50%;
        border: 2px solid #764ba2;
      }

      /* Comments section */
      .comments-container {
        max-width: 800px;
        background: #fff;
        padding: 2rem;
        border-radius: 16px;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
        margin: 30px auto;
      }

      .comment-item {
        background: #f9f9f9;
        padding: 10px 15px;
        border-radius: 12px;
        margin-bottom: 10px;
        display: flex;
        gap: 12px;
        align-items: flex-start;
      }

      .comment-item img {
        border-radius: 50%;
        border: 2px solid #38b2ac;
      }

      /* Comment form */
      .form-control:focus {
        border-color: #764ba2;
        box-shadow: 0 0 0 0.2rem rgba(118, 75, 162, 0.25);
      }

      .btn-success {
        background: linear-gradient(90deg, #38b2ac, #2f855a);
        border: none;
        border-radius: 50px;
        padding: 6px 14px;
        transition: all 0.3s ease-in-out;
      }

      .btn-success:hover {
        background: linear-gradient(90deg, #319795, #276749);
        transform: scale(1.05);
      }
    </style>
  </head>
  <body>
    <%- include("./partials/nav") %>

    <!-- Blog Content -->
    <div class="blog-container">
      <h1 class="blog-title"><%= blog.title %></h1>
      <img src="<%= blog.coverImageURL %>" class="blog-image" />

      <pre class="mt-3"><%= blog.body %></pre>

      <!-- Author Info -->
      <div class="author-box">
        <img src="<%= blog.createdBy.profileImageURL %>" width="50px" />
        <span><%= blog.createdBy.fullName %></span>
      </div>
    </div>

    <!-- Comments Section -->
    <div class="comments-container">
      <h3>Comments (<%= comments.length %>)</h3>

      <% if (locals.user) { %>
        <form action="/blog/comments/<%= blog._id %>" method="post" class="mt-3">
          <div class="mb-3 d-flex gap-2">
            <input
              type="text"
              name="content"
              class="form-control"
              placeholder="Enter Your Comment"
            />
            <button class="btn btn-sm btn-success" type="submit">Add</button>
          </div>
        </form>
      <% } %>

      <!-- List of Comments -->
      <div class="mt-3">
        <% comments.forEach(comment => { %>
          <div class="comment-item">
            <img src="<%= comment.createdBy.profileImageURL %>" width="40px" />
            <div>
              <strong><%= comment.createdBy.fullName %></strong>
              <pre><%= comment.content %></pre>
            </div>
          </div>
        <% }) %>
      </div>
    </div>

    <%- include("./partials/script") %>
  </body>
</html>
